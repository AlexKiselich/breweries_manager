<h1>Beers</h1>

<% @beers.each do |beer| %>
<h3><%= link_to "#{beer.name}", "/beers/#{beer.id}" %></h3>
<p>Beer Type: <%= beer.beer_type %></p>
<p>ABV: <%= beer.abv %></p>
<p>On Draft: <%= beer.on_draft %></p>
<p>Untapped Rating: <%= beer.untapped_rating %></p>
<p><%= link_to "Edit #{beer.name}", "/beers/#{beer.id}/edit" %></p>
<p><%= button_to "Delete #{beer.name}", "/beers/#{beer.id}", method: :delete %></p>

<% end %>