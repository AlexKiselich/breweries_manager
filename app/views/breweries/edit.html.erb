<%= form_with url: "/breweries/#{@brewery.id}", method: :patch, local: :true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>
  <%= form.label :serves_food %><br>
  <%= form.radio_button :serves_food, true %>
  <%= form.label :serves_food_true, "true" %><br>
  <%= form.radio_button :serves_food, false %>
  <%= form.label :serves_food_false, "false" %><br>
  <%= form.label :draft_lines %>
  <%= form.number_field :draft_lines, in: 1..20, step: 1 %><br>
  <%= form.submit "Update #{@brewery.name}" %>
<% end %>